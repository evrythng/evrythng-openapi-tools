{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "description"
  ],
  "properties": {
    "description": {
      "type": "string"
    },
    "properties": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z]+": {
          "anyOf": [
            {
              "type": "object",
              "required": [
                "$ref"
              ],
              "properties": {
                "$ref": {
                  "type": "string"
                }
              }
            },
            {
              "required": [
                "description"
              ],
              "properties": {
                "description": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "string",
                    "number",
                    "boolean",
                    "object",
                    "integer"
                  ]
                }
              }
            },
            {
              "required": [
                "items",
                "description"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "emum": [
                    "array"
                  ]
                },
                "description": {
                  "type": "string"
                },
                "items": {
                  "oneOf": [
                    {
                      "required": [
                        "$ref"
                      ],
                      "properties": {
                        "$ref": {
                          "type": "string"
                        }
                      }
                    },
                    {
                      "required": [
                        "type"
                      ],
                      "properties": {
                        "type": {
                          "enum": [
                            "string",
                            "number",
                            "boolean"
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}