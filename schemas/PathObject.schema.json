{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "patternProperties": {
    "post|get|put|delete": {
      "required": [
        "summary",
        "description",
        "tags",
        "x-api-keys",
        "responses"
      ],
      "properties": {
        "summary": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minimum": 1,
          "maximum": 1
        },
        "parameters": {
          "type": "array",
          "items": {
            "required": [
              "$ref"
            ],
            "additionalProperties": false,
            "properties": {
              "$ref": {
                "type": "string"
              }
            }
          }
        },
        "x-api-keys": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Operator",
              "Application",
              "Application User",
              "Device",
              "Trusted Application"
            ],
            "minumum": 1
          }
        },
        "responses": {
          "additionalProperties": false,
          "patternProperties": {
            "200|201|202|204|301|307|400|401|404|409|500": {
              "required": [
                "description"
              ],
              "properties": {
                "description": {
                  "type": "string"
                },
                "content": {
                  "patternProperties": {
                    "application/json": {
                      "required": [
                        "schema",
                        "example"
                      ],
                      "properties": {
                        "schema": {
                          "anyOf": [
                            {
                              "required": ["$ref"],
                              "properties": {
                                "$ref": {
                                  "type": "string"
                                }
                              }
                            },
                            {
                              "required": [
                                "items"
                              ],
                              "properties": {
                                "type": {
                                  "type": "string",
                                  "emum": [
                                    "array"
                                  ]
                                },
                                "items": {
                                  "required": [
                                    "$ref"
                                  ],
                                  "properties": {
                                    "$ref": {
                                      "type": "string"
                                    }
                                  }
                                }
                              }
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
